#!/bin/sh

WILDFLY_BASE_URL="https://github.com/wildfly/wildfly/releases/download"
WILDFLY_BASE_URL_DOWNLOAD="https://www.wildfly.org/downloads/"

wildfly()
{
  echo $1 | egrep "donwload-only" &>/dev/null
  if [ $? -eq 0 ]
  then
    VERSION="latest"
    downloadonly=1
  fi
  WILDFLY_BASE_URL_DOWNLOAD="https://www.wildfly.org/downloads/"
  VERSION="${VERSION:-latest}"
  if [ $VERSION != "latest" ]
  then
    VERSION=$( curl ${WILDFLY_BASE_URL_DOWNLOAD} 2>/dev/null \
      | egrep -i \.zip \
      | egrep -ow '"(http?(s)://.*.zip)"' \
      | egrep -o 'wildfly-[0-9]{1,}.(.[0-9]){1,}?.?(Final).zip' \
      | sort \
      | uniq \
      | egrep -o '[0-9]{1,}(.[0-9]){1,}' \
      | egrep "${VERSION}"
    )
  else
     VERSION=$( curl ${WILDFLY_BASE_URL_DOWNLOAD} 2>/dev/null \
      | egrep -i \.zip \
      | egrep -ow '"(http?(s)://.*.zip)"' \
      | egrep -o 'wildfly-[0-9]{1,}.(.[0-9]){1,}?.?(Final).zip' \
      | sort \
      | uniq \
      | egrep -o '[0-9]{1,}(.[0-9]){1,}' \
      | tail -1
    )
  fi
  echo "wildfly-${VERSION}.Final.zip"
  curl -OL --progress-bar "${WILDFLY_BASE_URL}/${VERSION}.Final/wildfly-${VERSION}.Final.zip"
  if [ "${downloadonly}" -eq 0 ]
  then
    extract "wildfly-${VERSION}.Final.zip"
    start "wildfly-${VERSION}.Final"
    cleanup
  fi
}

extract() {

  cat > wildfly-extract.sh <<EOF
mkdir -p /tmp/install.$$
mv "$1" /tmp/install.$$
cd /tmp/install.$$
unzip /tmp/install.$$/$1
EOF

sh wildfly-extract.sh
rm -f wildfly-extract.sh

}

start()
{
  /tmp/install.$$/$1/bin/standalone.sh
}

cleanup()
{
  rm -f /tmp/install.$$
}

main()
{
  [ $# -eq 0 ] && wildfly

  while [ $# -ne 0 ]
  do
    case $1 in
       "-i")
         read -p "Qual versão do WildFly você deseja fazer download: " version
         wildfly "$version"
       ;;
       "-v")
         shift
         wildfly "$1"
       ;;
       "-d")
         wildfly "download-only"
       ;;
    esac
    shift
  done
  exit 0
}

main $@
